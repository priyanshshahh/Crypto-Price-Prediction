    "import os\n",
    "import time\n",
    "import json\n",
    "import pandas as pd\n",
    "import matplotlib.pyplot as plt\n",
    "import cryptocompare\n",
    "\n",
    "#Setup project directories\n",
    "PROJECT_DIR = os.path.expanduser(\"~/Desktop/crypto proj\")\n",
    "DATA_DIR    = os.path.join(PROJECT_DIR, \"data\")\n",
    "CHART_DIR   = os.path.join(PROJECT_DIR, \"charts\")\n",
    "os.makedirs(DATA_DIR,  exist_ok=True)\n",
    "os.makedirs(CHART_DIR, exist_ok=True)\n",
    "\n",
    "#Define symbols \n",
    "cryptos = {\n",
    "    'BTC': 'Bitcoin',\n",
    "    'ETH': 'Ethereum',\n",
    "    'DOGE': 'Dogecoin'\n",
    "}\n",
    "\n",
    "#Fetch ~5 years (1825 days) of daily OHLCV from CryptoCompare\n",
    "crypto_data = {}\n",
    "limit_days = 1825\n",
    "for symbol, name in cryptos.items():\n",
    "    print(f\"Fetching {name} ({symbol})…\")\n",
    "    hist = cryptocompare.get_historical_price_day(symbol, 'USD', limit=limit_days)\n",
    "    if not hist:\n",
    "        print(f\"No data returned for {symbol}. Skipping.\")\n",
    "        continue\n",
    "\n",
    "    # Build DataFrame\n",
    "    df = pd.DataFrame(hist)\n",
    "    df.rename(columns={\n",
    "        'time': 'Timestamp',\n",
    "        'open': 'Open',\n",
    "        'high': 'High',\n",
    "        'low': 'Low',\n",
    "        'close': 'Close',\n",
    "        'volumefrom': 'Volume'\n",
    "    }, inplace=True)\n",
    "    df['Date'] = pd.to_datetime(df['Timestamp'], unit='s')\n",
    "    df.set_index('Date', inplace=True)\n",
    "    df.drop(columns=['Timestamp', 'volumeto'], errors=True, inplace=True)\n",
    "\n",
    "    # Save raw CSV\n",
    "    csv_path = os.path.join(DATA_DIR, f\"{symbol}.csv\")\n",
    "    df.to_csv(csv_path)\n",
    "    crypto_data[symbol] = df\n",
    "    print(f\"Saved raw data to {csv_path}\")\n",
    "\n",
    "    time.sleep(1)  # pause for API\n",
    "\n",
    "#Combine closing prices\n",
    "if crypto_data:\n",
    "    combined = pd.DataFrame({\n",
    "        cryptos[s]: df['Close']\n",
    "        for s, df in crypto_data.items()\n",
    "    })\n",
    "    combined_csv = os.path.join(DATA_DIR, \"combined_crypto_prices.csv\")\n",
    "    combined.to_csv(combined_csv)\n",
    "    print(f\"Combined prices saved to {combined_csv}\")\n",
    "\n",
    "    #Create summary JSON (including average volume)\n",
    "    summary = {}\n",
    "    for symbol, df in crypto_data.items():\n",
    "        summary[cryptos[symbol]] = {\n",
    "            'Start Date':     df.index.min().strftime('%Y-%m-%d'),\n",
    "            'End Date':       df.index.max().strftime('%Y-%m-%d'),\n",
    "            'Trading Days':   len(df),\n",
    "            'Min Price':      f\"${df['Close'].min():.2f}\",\n",
    "            'Max Price':      f\"${df['Close'].max():.2f}\",\n",
    "            'Current Price':  f\"${df['Close'].iloc[-1]:.2f}\",\n",
    "            'Average Volume': int(df['Volume'].mean())\n",
    "        }\n",
    "    summary_path = os.path.join(DATA_DIR, \"data_summary.json\")\n",
    "    with open(summary_path, 'w') as f:\n",
    "        json.dump(summary, f, indent=4)\n",
    "    print(f\"Summary JSON saved to {summary_path}\")\n",
    "\n",
    "    #Plot: Normalized Price Trends\n",
    "    plt.figure(figsize=(14, 7))\n",
    "    for symbol, df in crypto_data.items():\n",
    "        norm = df['Close'] / df['Close'].iloc[0] * 100\n",
    "        plt.plot(norm.index, norm, label=cryptos[symbol])\n",
    "    plt.title(\"Normalized Cryptocurrency Prices (≈5-Year Trend)\")\n",
    "    plt.xlabel(\"Date\"); plt.ylabel(\"Normalized Price (Base 100)\")\n",
    "    plt.legend(); plt.grid(True)\n",
    "    plt.savefig(os.path.join(CHART_DIR, \"initial_price_comparison.png\"))\n",
    "    plt.close()\n",
    "    print(\"Saved normalized price chart.\")\n",
    "\n",
    "    #Plot: Daily Returns\n",
    "    plt.figure(figsize=(14, 7))\n",
    "    for symbol, df in crypto_data.items():\n",
    "        returns = df['Close'].pct_change().dropna()\n",
    "        plt.plot(returns.index, returns, label=cryptos[symbol], alpha=0.7)\n",
    "    plt.title(\"Daily Returns of Cryptocurrencies\")\n",
    "    plt.xlabel(\"Date\"); plt.ylabel(\"Daily Returns\")\n",
    "    plt.legend(); plt.grid(True)\n",
    "    plt.savefig(os.path.join(CHART_DIR, \"daily_returns.png\"))\n",
    "    plt.close()\n",
    "    print(\"Saved daily returns chart.\")\n",
    "\n",
    "    #Plot: Volume Comparison (log scale)\n",
    "    plt.figure(figsize=(14, 7))\n",
    "    for symbol, df in crypto_data.items():\n",
    "        plt.plot(df.index, df['Volume'], label=cryptos[symbol])\n",
    "    plt.title(\"Trading Volume Comparison\")\n",
    "    plt.xlabel(\"Date\"); plt.ylabel(\"Volume\")\n",
    "    plt.yscale('log'); plt.legend(); plt.grid(True)\n",
    "    plt.savefig(os.path.join(CHART_DIR, \"volume_comparison.png\"))\n",
    "    plt.close()\n",
    "    print(\"Saved volume comparison chart.\")\n",
    "else:\n",
    "    print(\"No valid data fetched—nothing to combine or plot.\")\n"
   ]
  }
 ],
